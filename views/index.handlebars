
    <header class="grid-container-fluid">
        <div class="callout" id="universe-background">
            <h1 id="header-text">Burger Time!</h1>
        </div>
    </header>

    <main class="grid-container" id="large-container">
        <div class="grid-y grid-margin-y">
            <div class="cell small-12" id="whole-page" data-alignment="center">
                <br>
                <!-- Form Container -->
                <div class="grid-container" id="form-container">
                    <div class="grid-y grid-margin-y">

                        <form class="create-form">
                            <div class="grid-x grid-margin-x">
                                <div class="cell small-12">

                                    <label>
                                        <input id="user-input" type="text" placeholder="Burger type goes here"
                                            aria-describedby="exampleHelpTextNumber">
                                    </label>

                                </div>
                            </div>

                            <div class="grid-x grid-margin-x">
                                
                                <fieldset class="cell medium-6">
                                    <button id="search-button" class="button" type="submit" value="Submit">Submit
                                        Burger</button>
                                </fieldset>

                            </div>
                        </form>
                    </div>
                </div>

                <!-- Returned Information Grid  -->
                <div class="grid-container-fluid" id="small-container">
                    <div id="info-grid" class="grid-y grid-margin-y">

                        <!-- Poster and Information Grid -->
                        <div class="grid-x grid-margin-x" data-equalizer data-equalize-on="medium" id="test-eq">
                            <div class="cell medium-6">
                                <div class="callout" data-equalizer-watch>
                                    <h2>I hold burgers to be devoured</h2>
                                    <ul>
                                        {{#each burgers}}
                                        {{#unless devoured}}
                                        {{> burgers/burger-block devoured=true}}
                                        {{/unless}}
                                        {{/each}}
                                    </ul>

                                </div>
                            </div>
                            <div class="cell medium-6">
                                <div class="callout" data-equalizer-watch>
                                    <h2>I hold devoured Burgers</h2>
                                    <ul>
                                        {{#each burgers}}
                                        {{#if devoured}}
                                        {{> burgers/burger-block devoured=false}}
                                        {{/if}}
                                        {{/each}}
                                    </ul>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </main>


